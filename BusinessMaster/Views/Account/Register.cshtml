@model RegisterViewModel
    <section class="sp-100 login-section" id="section-contact">
        <div class="container">
            <div class="login-box mt-5 shadow bg-white form-section">
                <h4 class="mb-0 text-left text-uppercase">
                    Sign Up
                </h4>
                <form asp-controller="Account" asp-action="Register" method="post" role="form">
                    <div class="row">
                        
                        <div class="col-12" id="form-box">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="form-group mb-4">
                                <label>Company Name</label>
                                <input type="text" name="Name" asp-for="Name" placeholder="Company Name" class="form-control">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-4">
                                <label>Your Email Address</label>
                                <input type="email" name="email" asp-for="Email" placeholder="Your Email Address" class="form-control">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-4">
                                <label>Password</label>
                                <input type="password" class="form-control " asp-for="Password"  placeholder="Password">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-4">
                                <label>Confirm Password</label>
                                <input type="password" class="form-control" asp-for="ConfirmPassword" placeholder="Confirm Password">
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>

                            <button type="submit" class="btn btn-lg btn-custom mt-2" id="save-form">
                                Sign Up
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>
@section Scripts{ 
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

 
