@model BusinessMaster.Models.ServicesName

@{
    ViewData["Title"] = "Delete";
}
<div class="container" style="margin-top: 130px;">
    <h3 class="text-center" style="color:red">Are you sure you want to delete this?</h3>
    <div>
        <h4 class="text-center">Service Name</h4>
        <hr />
        <dl class="dl-horizontal text-center">

            <dd style="text-decoration:double;color:red">
                <div>
                    <div class="col-form-label btn btn-danger">
                        @Html.DisplayFor(model => model.ServiceName)
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="ServicesNameId" />
                            <button type="submit" class="btn btn-default"><i class="fas fa-trash"></i></button>
                        </form>

                    </div>
                </div>
                <a asp-action="Index" class="btn btn-warning mt-1"><i class="fas fa-arrow-circle-left"></i></a>
            </dd>
        </dl>


    </div>
</div>
