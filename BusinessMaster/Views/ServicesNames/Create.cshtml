@model BusinessMaster.Models.ServicesName

@{
    ViewData["Title"] = "Create";
}
<div class="container" style="margin-top: 130px;">


    <div class="inner-banner-cls mt-5">
        <div class="container text-center">
            <h1 style="color:#010168">Service Entry</h1>
        </div>
    </div>
    <div id="msg">

    </div>
    <div class="row d-flex justify-content-center">
        <div class="col-md-4">
            <form asp-action="Create" asp-controller="ServicesNames" id="form0" data-ajax="true" data-ajax-method="Post" data-ajax-mode="replace" data-ajax-update="#msg" data-ajax-success="success" enctype="multipart/form-data" oncomplete="ClearAll">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="ServiceName" class="control-label"></label>
                    <input asp-for="ServiceName" class="form-control" />
                    <span asp-validation-for="ServiceName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" value="Create" class="btn btn-primary">Create</button>
                    <a class="btn btn-info" style="float:right" asp-action="Index">Back to List</a>
                </div>

            </form>
        </div>
    </div>
</div>
@section Scripts {
    <environment include="Development,Production">

        <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
        <script src="~/lib/ajax/dist/jquery.unobtrusive-ajax.js"></script>
        <script src="~/img/ClientSideValidationCV.js"></script>
        @*Axaj data successfully Post then data clear*@
        <script>
            function success() {
                $("#form0").trigger("reset");
            };
        </script>
    </environment>
}
