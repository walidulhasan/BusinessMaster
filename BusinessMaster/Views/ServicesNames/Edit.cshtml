@model BusinessMaster.Models.ServicesName

@{
    ViewData["Title"] = "Edit";
}
<div class="container" style="margin-top: 130px;">
    <div class="inner-banner-cls mt-5">
        <div class="container text-center">
            <h1 style="color:#db1a3f">Service Edit</h1>
        </div>
    </div>
    <div class="row d-flex justify-content-center">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ServicesNameId" />
                <div class="form-group">
                    <label asp-for="ServiceName" class="control-label"></label>
                    <input asp-for="ServiceName" class="form-control text-danger" />
                    <span asp-validation-for="ServiceName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" value="Create" class="btn btn-primary">Edit</button>
                    <a class="btn btn-info" style="float:right" asp-action="Index">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

